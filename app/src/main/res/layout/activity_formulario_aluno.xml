            android:hint="Não preencher"
            />



        <Button
            android:id="@+id/activity_formulario_aluno_btn_salvar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="Salvar"
            android:textColor="@color/white"

        />

    </LinearLayout>

</ScrollView>